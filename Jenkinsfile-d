    // Node Name agent
  agent {
   node { label 'workstation' }
  }
    stages {
        stage('one') {
            steps {
                echo 'one'
            }
        }
        stage('two') {
            steps {
                echo 'two'
            }
        }
    }
    post {
        failure {
            echo 'I will always say Hello again!'
        }
    }
}